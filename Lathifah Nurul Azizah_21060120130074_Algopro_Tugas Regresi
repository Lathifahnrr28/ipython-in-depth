import pandas as pd
menu = pd.read_csv("menu.csv")
print(menu)

#menganalisis statistik
menu.describe(include="all")

#menganalisis age ke sex
a = menu["Carbohydrates"]
b = menu["Total Fat"]
c = menu["Protein"]
d = menu["Calories"]
e = menu["Sugars"]

#regresi karbo dan total fat
from scipy import stats
import matplotlib.pyplot as plt
m , g, r, p, std_err = stats.linregress(a, b)
print("Nilai kemiringan dari hubungan Karbohidrat dengan total fat adalah")
print(m)

###
def reglinier(a):
    return m * a + g

print("Regresi antara Karbohidrat dan Total Fat")
rumusanregresi = list(map(reglinier, a))
plt.scatter(a, b)
plt.xlabel("Carbohydrates")
plt.ylabel("Total Fat")
plt.title("Hubungan Karbohidrat dengan Total Fat")
plt.plot(a, rumusanregresi)
plt.show()

print("Nilai (r) dari hubungan karbohidrat dengan total fat adalah")
print(r)
print("Nilai error dari hubungan karbohidrat dengan total fat adalah")
print(std_err)

